<div class="row">
  <div class="col-md-4">
    <%= render 'parks/park_info', park: @park %>
    <%= render 'parks/new_post_form', post: @post, park: @park %>
  </div>

  <div class="col-md-8">
    <h1><%= @park.park_name %>  の投稿</h1>
    <table class="table">
    <thead>
      <tr>
        <th>photo</th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
            <%= image_tag post.get_image, size: "300x300" %><% end %><br>
            投稿者 : <%= post.user.name %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>