<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>登録公園一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>公園詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @parks.each do |park| %>
            <tr>
            <td>
             <%= link_to park_path(park.id) do %>
             <%= image_tag park.get_image, size: "300x300" %>
             <% end %></td>
            <td>
             <h4>公園名 : <%= park.park_name %></h4>
             <p>説明 : <%= park.introduction %></p>
             <p>郵便番号 : <%= park.postal_code %></p>
             <p>住所 : <%= park.address %></p>
             <p><strong>遊具 : </strong>
               <%= park.equipments.pluck(:name).join("、") %></p>
             <p><strong>遊具 : </strong>
               <%= park.facilities.pluck(:name).join("、") %></p>
             <p><strong>年齢層 : </strong>
               <%= park.age_groups.pluck(:name).join("、") %></p>
            </td>
            </tr>
            <% end %>
            
          </tbody>
</div>
</div>
</div>

