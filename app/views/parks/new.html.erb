<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">

  <h2 class="text-center my-4">公園登録フォーム</h2>
    <%= form_with model: @park do |f| %>

      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>公園名</h4>
      <%= f.text_field :park_name %>
      <h4>公園の説明</h4>
      <%= f.text_area :introduction %>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>

    <div class="field">
      <h5>遊具（複数選択可）</h5><br>
        <%= f.collection_check_boxes(:equipment_ids, Equipment.all, :id, :name) do |b| %>
        <span class="equip-item">
          <%= b.check_box %>
          <%= b.label %>
        </span>
      <% end %></div>

    <div class="field">
      <h5>設備（複数選択可）</h5><br>
        <%= f.collection_check_boxes(:facility_ids, Facility.all, :id, :name) do |b| %>
        <span class="facility-item">
          <%= b.check_box %>
          <%= b.label %>
        </span>
      <% end %>
    </div>

    <div class="field">
      <h5>年齢層（複数選択可）</h5><br>
        <%= f.collection_check_boxes(:age_group_ids, AgeGroup.all, :id, :name) do |b| %>
          <span class="facility-item">
          <%= b.check_box %>
          <%= b.label %>
          </span>
        <% end %>
    </div>
  
      <%= f.submit '登録' %>
    <% end %> 
  </div>
</div>
