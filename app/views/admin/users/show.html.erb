<div class="row">
  <div class="col-md-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5><%= @user.name %>さんの会員詳細</h5>
        <%= button_to 'ユーザー削除', [:admin, @user], method: :delete, 
            data: { confirm: '本当にユーザーを削除しますか？' }, class: "btn btn-sm btn-danger" %>
    </div>
      <%= image_tag @user.get_profile_image(100,100), class: "img-fluid rounded-circle mb-3",
          style: "object-fit:cover;" %>     
        <table class="table">
          <tbody>
           <tr>
              <th>会員ID</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
            <tr>
              <th>名前</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>email</th>
              <td><%= @user.email %></td>
            </tr>
            </tbody>
        </table>
   </div>
  <div class="col-md-7 border-left d-none d-md-block pl-md-4">
     <h5>投稿一覧</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <% @posts.each do |post| %>
                <div class="row no-gutters align-items-start border-top">
                  <div class="col-md-5 mb-3 mb-md-0 pr-md-3">
                      <%= image_tag post.get_image, class: "img-fluid rounded", style: "width:100px;height:100px;object-fit:cover;" %>
                  </div>
                  <div class="col-md-7"> 
                  <%= post.user.name %>さん
                    <small class="text-muted ml-2"> <%= post.created_at.strftime('%Y/%m/%d') %></small>
                    <%=render 'public/posts/rating_show', post: post %>            
                    <h3 class="h5 mb-0"><%= post.title %></h3> 
                    <p class="text-secondary"><%= post.body %></p>
                    <%= button_to '投稿削除', [:admin, post], method: :delete, data: { confirm: 'この投稿を削除しますか？' },
                     form: { class: 'd-inline' }, class: 'btn btn-sm btn-outline-danger' %>
                  </div>
                </div>      
              <% end %>
            </li>
          </ul>
   </div>
</div>
  <div class="text-center mt-3">
    <%= link_to "Back", admin_users_path, class: "font-weight-bold d-inline-block mt-3" %>
  </div>