<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>投稿一覧</h1>
       <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
           <td>
            <%= link_to post_path(post) do %>
            <%= image_tag post.get_image, size: "300x300" %>
            <% end %><br>
            投稿者 : <%= post.user.name %></td> 
           <td><%= post.title %></td>
           <td><%= post.body %></td>
          </tr>
         <% end %>
      </tbody>
    </div>
  </div>
</div>


