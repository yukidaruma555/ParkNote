<div class="row">
  <div class="col-md-3">
      <%= render 'list', user: @user %>
  </div>

  <div class="col-md-8 offset-md-1">
      <h1>Park</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image, size: "200x200" %>
            <% end %>
            <%= link_to park_path(post.park) do %>
            <%= post.park.park_name %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
