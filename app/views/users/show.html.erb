<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       <%= render 'list', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
       <h1>Park</h1>

       <table class="table">
         <thead>
           <tr>
             <th>Image</th>
             <th>Title</th>
             <th>Body</th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
          <tr>
           <td>
             <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image, size: "200x200" %>
             <% end %>
           </td>
           <td><%= post.title %></td>
           <td><%= post.body %></td>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>  