
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <% if @user.errors.any? %>
<%= @user.errors.count %>件のエラーが発生しました
<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

    <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for ="user_name">Name</lebel><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class= "form-group">
          <label for ="user_image">ProfileImage</lebel><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <% if @user == current_user %>
            <%= f.submit "Update User" %>
            <%= link_to "退会", user_path(current_user), method: :delete, data: { turbo_confirm: "本当に退会しますか？" } %>
          <% end %>

          <% end %>
        </div>

  </div>
</div>