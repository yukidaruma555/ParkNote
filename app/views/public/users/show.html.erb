<div class="row">
  <div class="col-md-3">
      <%= render 'public/users/list', user: @user %>
  </div>

  <div class="col-md-9">
    <h2 class="text-center my-4">投稿一覧</h2>

      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-6 col-sm-6">
            <div class="card mb-2 shadow-sm">
                <%= link_to post_path(post.id) do %>
                  <%= image_tag post.get_image, class: "card-img-top", style: "object-fit:cover; height:250px;" %>
                <% end %>
            
              <div class="card-body">
                <p class="card-text">
                  <small class="text-muted">
                   <%= link_to park_path(post.park), class: "text-decoration-none" do %>
                    <%= post.park.park_name%>
                   <% end %>
                   ・ <%= post.created_at.strftime("%Y/%m/%d") %></small>
                </p>
                <h5 class="card-title"> <%= post.title %></h5>
               
                <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
              </div>
            </div>
          </div>  
        <% end %>
      </div>
  </div>
</div>
