<%# if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true, class: 'form-inline mb-2' do |f| %>
    <%= f.search_field :content, class: "form-control mx-1 mb-2", placeholder: "keyword", value: params[:content] %>
    <%= f.select :model, options_for_select({"User" => "user", "Park" => "park"}, params[:model]), {}, { class: 'form-control mx-1 mb-2' } %>
    <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}, params[:method]), {}, { class: 'form-control mx-1 mb-2' } %>
    <%= f.submit "検索", class: "btn btn-secondary mx-1 mb-2 ml-auto" %>
  <% end %>
<%# end %>