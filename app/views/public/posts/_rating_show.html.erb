<div id="post_rating_show_<%= post.id %>"></div>

<script>
  $(document).on('turbolinks:load', function() {
  let elem = document.querySelector('#post_rating_show_<%= post.id %>');
  if (elem == null) return;

  elem.innerHTML = "";
  let opt = {  
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    score: '<%= post.rating %>',
    readOnly: true,
  };
  raty(elem, opt);
  });
</script>