<% if park.image.attached? %>
  <%= image_tag park.image, class: "rounded img-fluid mt-2" %>
<% else %>
  <%= image_tag 'no_image_square', class: "img-fluid mt-2" %>
<% end %>

<table class="table" style="overflow-wrap:anywhere;">
  <tbody>
    <tr>
      <th width="30%">公園名</th>
      <td><%= park.park_name %></td>
    </tr>
    <tr>
      <th>説明</th>
        <td>
        <%= park.introduction %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= park.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= park.address %></td>
    </tr>
    <tr>
      <th>遊具</th>
      <td><%= park.equipments.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>設備</th>
      <td><%= park.facilities.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>年齢層</th>
      <td><%= park.age_groups.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>登録者</th>
      <td><%= park.user&.name || "退会済みユーザー" %></td>
    </tr>
    <tr>
      <th>登録日</th>
      <td><%= park.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
  </tbody>
</table>
