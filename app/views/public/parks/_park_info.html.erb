<% if park.user == current_user %>
  <div class="d-flex flex-column flex-sm-row justify-content-end mt-3 pt-2">
    <%= link_to "編集", edit_park_path(park), class: "btn btn-outline-primary" %> 
    <%= link_to "削除", park_path(park), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-outline-danger" %>
  </div>
<% end %>

<% if park.image.attached? %>
  <%= image_tag park.image, class: "img-fluid mt-2" %>
<% else %>
  <%= image_tag 'no_image_square', class: "img-fluid mt-2" %>
<% end %>

<table class="table">
  <tbody>
    <tr>
      <th>公園名</th>
      <td><%= park.park_name %></td>
    </tr>
    <tr>
      <th>説明</th>
      <td><%= park.introduction %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= park.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= park.address %></td>
    </tr>
    <tr>
      <th>遊具</th>
      <td><%= park.equipments.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>設備</th>
      <td><%= park.facilities.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>年齢層</th>
      <td><%= park.age_groups.pluck(:name).join("、") %></td>
    </tr>
    <tr>
      <th>登録者</th>
      <td><%= park.user&.name || "退会済みユーザー" %></td>
    </tr>
    <tr>
      <th>登録日</th>
      <td><%= park.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
  </tbody>
</table>
